<UserControl
    x:Class="AboutModule.Views.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AboutModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodels="clr-namespace:AboutModule.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:AboutViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="32">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{StaticResource MaterialDesignHeadline4TextBlock}"
            Text="关于分拣装置实训平台" />

        <TextBlock
            Grid.Row="1"
            MaxWidth="480"
            Margin="16"
            Style="{StaticResource MaterialDesignBody1TextBlock}"
            Text="版本 1.0 - 发布于 2025年 5月10日"
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <TextBlock
            Grid.Row="2"
            MaxWidth="480"
            Margin="16"
            Style="{StaticResource MaterialDesignBody1TextBlock}"
            Text="{Binding DevelopInfo}"
            TextWrapping="Wrap" />

        <StackPanel
            Grid.Row="3"
            Margin="16"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                Style="{StaticResource MaterialDesignBody1TextBlock}"
                Text="项目源码地址：" />

            <Border
                Margin="8,0,0,0"
                Padding="8,8"
                VerticalAlignment="Center"
                BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                BorderThickness="1"
                CornerRadius="8">

                <TextBlock
                    Cursor="Hand"
                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                    Style="{StaticResource HoverableTextBlockStyle}">
                    <TextBlock.Inlines>
                        <Hyperlink NavigateUri="https://github.com/plumestarry/TrainingSystem-AutoAPP" RequestNavigate="Hyperlink_RequestNavigate">
                            <Run Text="https://github.com/AutoAPP/TrainingSystem-AutoAPP" />
                        </Hyperlink>
                    </TextBlock.Inlines>
                </TextBlock>

            </Border>
        </StackPanel>

        <TextBlock
            Grid.Row="4"
            Margin="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="{DynamicResource PrimaryHueMidBrush}"
            Style="{StaticResource MaterialDesignBody1TextBlock}"
            Text="开发人员：PJL" />
    </Grid>

</UserControl>
