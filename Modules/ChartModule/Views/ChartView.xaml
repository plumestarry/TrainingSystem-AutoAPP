<UserControl
    x:Class="ChartModule.Views.ChartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChartModule.Views"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodels="clr-namespace:ChartModule.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:ChartViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="64">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,8,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.RowSpan="2">
                <Border
                    Background="Transparent"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <lvc:CartesianChart
                        Margin="16"
                        LegendPosition="Bottom"
                        Series="{Binding Series}"
                        XAxes="{Binding XAxes}"
                        YAxes="{Binding YAxes}" />
                </Border>
                <TextBlock
                    Margin="0,-12,0,0"
                    Padding="12,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Panel.ZIndex="1"
                    Background="{DynamicResource MaterialDesignPaper}"
                    Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                    Text="统计数据" />
            </Grid>
        </Grid>

        <Border Grid.Column="1" Margin="20" />

        <Grid Grid.Column="2" Margin="8,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.RowSpan="2">
                <Border
                    Background="Transparent"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <GroupBox
                            Grid.Row="0"
                            Margin="16,32,16,0"
                            Header="输出信息"
                            Style="{StaticResource MaterialDesignGroupBox}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    md:HintAssist.Hint="输出信息"
                                    AcceptsReturn="True"
                                    HorizontalScrollBarVisibility="Disabled"
                                    IsReadOnly="True"
                                    Style="{DynamicResource MaterialDesignDataGridTextColumnEditingStyle}"
                                    Text="{Binding OutputText}"
                                    TextWrapping="Wrap"
                                    VerticalScrollBarVisibility="Disabled" />
                            </ScrollViewer>
                        </GroupBox>

                        <ComboBox
                            Grid.Row="1"
                            Margin="16,16,16,0"
                            md:HintAssist.Hint="选择实训模式"
                            ItemsSource="{Binding CommunicationEntities}"
                            SelectedItem="{Binding SelectedCommunicationEntity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource MaterialDesignOutlinedComboBox}" />

                        <DockPanel Grid.Row="2" Margin="16,16,16,16">
                            <Button
                                Margin="0,0,8,0"
                                Content="实训开始"
                                DockPanel.Dock="Left"
                                Style="{DynamicResource MaterialDesignOutlinedButton}" />
                            <Button
                                Margin="8,0,0,0"
                                Content="上传记录"
                                DockPanel.Dock="Right"
                                Style="{DynamicResource MaterialDesignOutlinedButton}" />
                            <Border Background="Transparent" />
                        </DockPanel>


                    </Grid>
                </Border>
                <TextBlock
                    Margin="0,-12,0,0"
                    Padding="12,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Panel.ZIndex="1"
                    Background="{DynamicResource MaterialDesignPaper}"
                    Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                    Text="实训面板" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
