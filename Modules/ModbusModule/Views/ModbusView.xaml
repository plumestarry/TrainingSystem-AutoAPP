<UserControl
    x:Class="ModbusModule.Views.ModbusView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModbusModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodels="clr-namespace:ModbusModule.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:ModbusViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <CollectionViewSource x:Key="ModbusTypes" Source="{Binding ModbusTypes}" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="150" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="150" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="250" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" MinWidth="250" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Margin="0,0,5,0"
                Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            Width="24"
                            Height="24"
                            Command="{Binding AddInputItemCommand}"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="添加新的输入项">
                            <md:PackIcon Kind="Add" />
                        </Button>

                        <TextBlock
                            Grid.Column="1"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="输入配置" />
                    </Grid>


                    <DataGrid
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserSortColumns="True"
                        IsReadOnly="False"
                        ItemsSource="{Binding InputItems, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding SelectedInputItem, UpdateSourceTrigger=PropertyChanged}"
                        SelectionMode="Extended"
                        Style="{StaticResource MaterialDesignDataGrid}">
                        <!--<DataGrid.Resources>
                            <viewmodels:BindingProxy x:Key="proxy" Data="{Binding}" />
                        </DataGrid.Resources>-->
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Command="{Binding RemoveInputItemCommand}" Header="删除选中项">
                                    <MenuItem.Icon>
                                        <md:PackIcon Kind="Delete" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Index, Mode=OneWay}"
                                Header="序号"
                                IsReadOnly="True"
                                SortMemberPath="Index" />

                            <DataGridComboBoxColumn
                                Width="*"
                                Header="类型"
                                ItemsSource="{Binding Source={StaticResource ModbusTypes}}"
                                SelectedItemBinding="{Binding ModbusType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SortMemberPath="ModbusType" />

                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="名称"
                                IsReadOnly="False"
                                SortMemberPath="Name" />

                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="连接地址"
                                IsReadOnly="False"
                                SortMemberPath="Port" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <Border
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Center"
                Background="#E4E4E4" />

            <Border
                Grid.Column="2"
                Margin="5,0,0,0"
                Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="0"
                            Width="24"
                            Height="24"
                            Command="{Binding AddOutputItemCommand}"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            ToolTip="添加新的输出项">
                            <md:PackIcon Kind="Add" />
                        </Button>

                        <TextBlock
                            Grid.Column="1"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                            Text="输出配置" />
                    </Grid>

                    <DataGrid
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserSortColumns="True"
                        IsReadOnly="False"
                        ItemsSource="{Binding OutputItems, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding SelectedOutputItem, UpdateSourceTrigger=PropertyChanged}"
                        SelectionMode="Extended"
                        Style="{StaticResource MaterialDesignDataGrid}">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Command="{Binding RemoveOutputItemCommand}" Header="删除选中项">
                                    <MenuItem.Icon>
                                        <md:PackIcon Kind="Delete" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Index, Mode=OneWay}"
                                Header="序号"
                                IsReadOnly="True"
                                SortMemberPath="Index" />

                            <DataGridComboBoxColumn
                                Width="*"
                                Header="类型"
                                ItemsSource="{Binding Source={StaticResource ModbusTypes}}"
                                SelectedItemBinding="{Binding ModbusType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SortMemberPath="ModbusType" />

                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="名称"
                                IsReadOnly="False"
                                SortMemberPath="Name" />

                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="连接地址"
                                IsReadOnly="False"
                                SortMemberPath="Port" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <GridSplitter
            Grid.Row="1"
            Height="5"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource MaterialDesignDivider}"
            ResizeBehavior="PreviousAndNext" />

        <Grid Grid.Row="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="240" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    Command="{Binding SaveIOCommand}"
                    Content="保存"
                    Style="{StaticResource MaterialDesignRaisedButton}" />

                <ComboBox
                    Grid.Column="1"
                    Margin="20,0,20,0"
                    md:HintAssist.Hint="选择通信实体"
                    ItemsSource="{Binding CommunicationEntities}"
                    SelectedItem="{Binding SelectedCommunicationEntity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

                <Button
                    Grid.Column="2"
                    Margin="0,0,20,0"
                    Command="{Binding ConfigCommand}"
                    Content="配置"
                    Style="{StaticResource MaterialDesignRaisedButton}" />

                <Button
                    Grid.Column="3"
                    Command="{Binding ConnectCommand}"
                    Content="{Binding ConnectButtonText}"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            </Grid>

            <Border
                Grid.Row="1"
                Margin="0,5,0,0"
                Padding="5">
                <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                    <TextBox
                        x:Name="LogTextBox"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AcceptsReturn="True"
                        FontFamily="Consolas"
                        HorizontalScrollBarVisibility="Disabled"
                        IsReadOnly="True"
                        Style="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                        Text="{Binding LogMessage.LogMessages, Mode=OneWay}"
                        TextChanged="LogTextBox_TextChanged"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Disabled" />
                </ScrollViewer>
            </Border>
        </Grid>

        <Border Grid.Row="3" Height="5" />

    </Grid>
</UserControl>
