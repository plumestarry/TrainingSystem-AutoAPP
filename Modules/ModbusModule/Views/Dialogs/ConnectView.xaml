<UserControl
    x:Class="ModbusModule.Views.Dialogs.ConnectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:ModbusModule.ViewModels.Dialogs"
    xmlns:local="clr-namespace:ModbusModule.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="450"
    Height="300"
    d:DataContext="{d:DesignInstance Type=dialogs:ConnectViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="40,10,0,0">
                <Border Height="30" Margin="10">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="16"
                        Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                        Text="通信配置" />
                </Border>
                <Border Height="40" Margin="10">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="12"
                        Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                        Text="主机(IPAddress)" />
                </Border>
                <Border Height="40" Margin="10">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="12"
                        Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                        Text="端口" />
                </Border>
                <Border Height="40" Margin="10">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="12"
                        Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                        Text="从站 ID" />
                </Border>
            </StackPanel>


            <StackPanel Grid.Column="1" Margin="0,10,0,0">
                <Border
                    MinHeight="30"
                    Margin="10"
                    Background="Transparent"
                    BorderBrush="Transparent" />

                <Border Height="50" Margin="5">
                    <TextBox
                        Width="200"
                        Margin="10,0"
                        HorizontalAlignment="Left"
                        md:HintAssist.Hint="示例 127.0.0.1"
                        AcceptsReturn="False"
                        FontSize="12"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding ModbusConfig.IPAddress}" />
                </Border>
                <Border Height="50" Margin="5">
                    <TextBox
                        Width="200"
                        Margin="10,0"
                        HorizontalAlignment="Left"
                        md:HintAssist.Hint="示例 502"
                        AcceptsReturn="False"
                        FontSize="12"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding ModbusConfig.Port}" />
                </Border>
                <Border Height="50" Margin="5">
                    <TextBox
                        Width="200"
                        Margin="10,0"
                        HorizontalAlignment="Left"
                        md:HintAssist.Hint="填写 Number"
                        AcceptsReturn="False"
                        FontSize="12"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding ModbusConfig.SlaveID}" />
                </Border>

            </StackPanel>
        </Grid>

        <StackPanel
            Grid.Row="1"
            Margin="10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0,0,10,0"
                Command="{Binding CancelCommand}"
                Content="取消"
                Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button Command="{Binding SaveCommand}" Content="确定" />
        </StackPanel>
    </Grid>
</UserControl>
