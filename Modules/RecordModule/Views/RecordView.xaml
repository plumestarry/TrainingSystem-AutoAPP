<UserControl
    x:Class="RecordModule.Views.RecordView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RecordModule.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodels="clr-namespace:RecordModule.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:RecordViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="150" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="16,16"
            Orientation="Horizontal">
            <TextBlock
                Margin="16,0,32,0"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="↓实训记录↓" />
            <ComboBox
                x:Name="OutlinedComboBox"
                Width="256"
                md:HintAssist.Hint="记录筛选"
                ItemsSource="{Binding CommunicationEntities}"
                SelectedItem="{Binding SelectedCommunicationEntity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}" />
        </StackPanel>

        <Border
            Grid.Row="1"
            Height="5"
            VerticalAlignment="Center"
            Background="#E4E4E4" />

        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="250" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" MinWidth="250" />
            </Grid.ColumnDefinitions>

            <Border
                Grid.Column="0"
                Margin="0,0,5,0"
                Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="16,8"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                        Text="未通过记录" />

                    <DataGrid
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserSortColumns="True"
                        IsReadOnly="False"
                        ItemsSource="{Binding NotPassItems, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource MaterialDesignDataGrid}">

                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Index, Mode=OneWay}"
                                Header="序号"
                                IsReadOnly="True"
                                SortMemberPath="Index" />

                            <DataGridTextColumn
                                Width="0.5*"
                                Binding="{Binding UserName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="用户名"
                                IsReadOnly="True"
                                SortMemberPath="UserName" />

                            <DataGridTextColumn
                                Width="0.5*"
                                Binding="{Binding Title, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="模式"
                                IsReadOnly="True"
                                SortMemberPath="Title" />

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Content, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="通过轮数"
                                IsReadOnly="True"
                                SortMemberPath="Content" />

                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding RecordTime, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="实训时间"
                                IsReadOnly="True"
                                SortMemberPath="RecordTime" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <Border
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Center"
                Background="#E4E4E4" />

            <Border
                Grid.Column="2"
                Margin="5,0,0,0"
                Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Margin="16,8"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                        Text="已通过记录" />

                    <DataGrid
                        Grid.Row="1"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserSortColumns="True"
                        IsReadOnly="False"
                        ItemsSource="{Binding PassItems, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource MaterialDesignDataGrid}">

                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Index, Mode=OneWay}"
                                Header="序号"
                                IsReadOnly="True"
                                SortMemberPath="Index" />

                            <DataGridTextColumn
                                Width="0.5*"
                                Binding="{Binding UserName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="用户名"
                                IsReadOnly="True"
                                SortMemberPath="UserName" />

                            <DataGridTextColumn
                                Width="0.5*"
                                Binding="{Binding Title, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="模式"
                                IsReadOnly="True"
                                SortMemberPath="Title" />

                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Content, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="通过轮数"
                                IsReadOnly="True"
                                SortMemberPath="Content" />

                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding RecordTime, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                Header="实训时间"
                                IsReadOnly="True"
                                SortMemberPath="RecordTime" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2" Height="5" />
    </Grid>
</UserControl>